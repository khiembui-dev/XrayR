      ApiKey: "YOUR_API_KEY"
      NodeID: $node_id
      NodeType: $node_type
      Timeout: 30
      EnableVless: $enable_vless
    ControllerConfig:
      DeviceOnlineMinTraffic: 100
EOF

# N·∫øu l√† Trojan th√¨ th√™m SSL th·∫≠t
